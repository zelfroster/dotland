set ratios 1:2:3
# Basic Settings
set hidden true
set ignorecase true
set icons true
set drawbox true
set cursorpreviewfmt "\033[7;90m"
# set cleaner '~/.config/lf/cleaner'
set previewer '~/.config/lf/preview'

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd open ${{
  case $(file --mime-type $f -b) in 
    text/*) nvim $fx;;
  esac
}}

# cmd setwall ${{
#     xwallpaper --zoom "$f"
# }}

cmd setwall ${{
    set-wall "$f"
}}

cmd setpywall ${{
    set_wallpaper "$f"
}}

# Bindings
# Remove some defaults
map m
map o
map n
map "'"
map '"'
map d

map au unarchive
#map ae execute

# Basic Functions
map . set hidden!
map DD delete
map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir
map C clear
map w setwall

# Movement
map gD cd ~/dox
map gd cd ~/dl
map gm cd ~/code/my-learnings/
map gp cd ~/code/web/
map gw cd ~/pix/wall/
map gc cd ~/.config
map ge cd ~/dl/extras
map gs cd ~/.local/bin
